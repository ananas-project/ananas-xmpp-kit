<?xml version="1.0" encoding="UTF-8"?>
<Blueprint xmlns:bp="xmlns:ananas:blueprint:base" xmlns:awt="xmlns:ananas:blueprint:awt"
	xmlns:swing="xmlns:ananas:blueprint:swing" xmlns="xmlns:ananas:blueprint:base">

	<Head>
		<Import type="class:NamespaceInfo" value="ananas.lib.blueprint3.awt.AwtNamespaceInfo" />

		<Import type="class:NamespaceInfo" value="ananas.lib.blueprint3.awt.swing.SwingNamespaceInfo" />

	</Head>

	<Body>

		<awt:responseChain id="resp_chain">

			<awt:responseChainNode />

			<awt:responseChainNode />

			<awt:responseChainNode id="resp_chain_node_3" />
		</awt:responseChain>

		<JFrame id="root" height="480" title="Test AXK with BP2UI"
			width="640" x="100" xmlns="xmlns:ananas:blueprint:swing" y="100">

			<JMenuBar actionListener="#resp_chain">

				<JMenu label="Connection">

					<JMenuItem command="conn_reset" label="Reset" />

					<JMenuItem command="conn_connect" label="Connect" />

					<JMenuItem command="conn_disconnect" label="Disconnect" />

					<JMenuItem command="conn_close" label="Close" />
				</JMenu>

				<JMenu label="View">

					<JMenuItem command="view_clear_console" label="clear console" />

					<JMenuItem command="view_print_roster" label="print roster" />

					<JMenuItem command="view_print_presence_table" label="print presence-table" />
				</JMenu>

				<JMenu label="Template">

					<JMenuItem command="temp_message" label="send message" />

					<JMenuItem command="temp_presence" label="send presence" />

					<JMenuItem command="temp_iq" label="send iq" />

					<JMenu label="roster management">

						<JMenuItem command="temp_roster_add" label="add contact" />

						<JMenuItem command="temp_roster_modify" label="modify contact" />

						<JMenuItem command="temp_roster_remove" label="remove contact" />

						<JMenuItem command="temp_roster_pull" label="pull all" />
					</JMenu>

					<JMenu label="subscription management">

						<JMenuItem command="temp_subscription_subscribe" label="do subscribe" />

						<JMenuItem command="temp_subscription_subscribed" label="do subscribed" />

						<JMenuItem command="temp_subscription_unsubscribe"
							label="do unsubscribe" />

						<JMenuItem command="temp_subscription_unsubscribed"
							label="do unsubscribed" />

						<JMenuItem command="temp_subscription_unavailable"
							label="do unavailable" />
					</JMenu>
				</JMenu>
			</JMenuBar>

			<JPanel>

				<awt:BorderLayout />

				<position value="north" />

				<JPanel preferredSizeY="30">

					<awt:BorderLayout />

					<position value="west" />

					<JLabel text=" to jid: " />

					<position value="center" />

					<JTextField id="text_to" />
				</JPanel>

				<position value="center" />

				<JSplitPane orientation="vert" resizeWeight="0.5">

					<position value="top" />

					<JPanel>

						<awt:BorderLayout />

						<position value="center" />

						<JScrollPane>

							<JTextArea id="text_prev_send" editable="false" />
						</JScrollPane>

						<position value="east" />

						<JButton id="btn_copy_to_send" preferredSizeX="200"
							text="copy to send-box" />
					</JPanel>

					<position value="bottom" />

					<JPanel>

						<awt:BorderLayout />

						<position value="center" />

						<JScrollPane>

							<JTextArea id="text_send" />
						</JScrollPane>

						<position value="east" />

						<JButton id="btn_send" preferredSizeX="200" text="send" />
					</JPanel>
				</JSplitPane>

				<position value="south" />

				<JPanel preferredSizeY="30">
				</JPanel>
			</JPanel>
		</JFrame>
	</Body>

</Blueprint>